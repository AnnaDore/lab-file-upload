{{#if user}}
    <h2>Welcome, {{ user.username }}!</h2>
    <p>This is your profile page my friend! And your email is: {{ user.email }}</p>
    <a href="/create-post">Create post</a>
{{else}}
    <p>Still no logged in user, sorry!</p>
    <a href="/login" >login</a>
{{/if}}

<p>check other posts</p>
{{#each data}}
  <p>Content is: {{content}}</p>
  <p>Name is {{picName}}</p>
  <img src="{{picPath}}" alt="">
{{/each}}